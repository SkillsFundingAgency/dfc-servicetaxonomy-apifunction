<policies>
  <inbound>
    <set-header name="X-Forwarded-Host" exists-action="override">
      <value>@(context.Request.OriginalUrl.ToUri().Host)</value>
    </set-header>
    <base />
  </inbound>
  <backend>
    <retry condition="@(context.Response.StatusCode == 503)" count="15" interval="1">
        <forward-request />
    </retry>
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>